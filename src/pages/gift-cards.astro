---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import AmountSelector from '../components/AmountSelector.astro';
---

<Layout 
  title="Gift Cards - Anejo Mexican Restaurant"
  description="Purchase Anejo gift cards for friends and family. Choose from digital or physical cards with various denominations."
>
  <Hero 
    title="Gift Cards"
    subtitle="Give the gift of authentic Mexican cuisine and hand-crafted cocktails."
    imageSrc="https://prod-static.curiocity.com/uploads/2022/04/BeFunky-collage-43-1.jpg"
  />

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="font-display text-3xl font-bold text-secondary-800 mb-4">Purchase a Gift Card</h2>
        <p class="text-secondary-600 text-lg max-w-2xl mx-auto">
          Perfect for birthdays, holidays, or just because. Anejo gift cards can be used at any of our locations across Canada.
        </p>
      </div>

      <form class="bg-secondary-50 rounded-lg p-6 md:p-8 shadow-md">
        <div class="grid md:grid-cols-2 gap-6 mb-6">
          <div>
            <label for="name" class="block text-secondary-700 font-medium mb-2">Recipient Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
            />
          </div>
          <div>
            <label for="phone" class="block text-secondary-700 font-medium mb-2">Phone Number</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              required
              class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
            />
          </div>
        </div>

        <div class="mb-6">
          <label for="email" class="block text-secondary-700 font-medium mb-2">Email Address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required
            class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
          />
        </div>

        <div class="mb-6">
          <p class="block text-secondary-700 font-medium mb-2">Card Type</p>
          <div class="grid grid-cols-2 gap-4">
            <label class="relative cursor-pointer">
              <input type="radio" name="card-type" value="digital" class="peer sr-only" checked />
              <div class="flex items-center justify-center p-4 bg-white border-2 border-secondary-200 rounded-md peer-checked:border-primary-600 peer-checked:bg-primary-50 transition-all text-center">
                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto mb-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span class="font-medium text-secondary-800">Digital Card</span>
                  <p class="text-sm text-secondary-600 mt-1">Sent via email</p>
                </div>
              </div>
            </label>
            <label class="relative cursor-pointer">
              <input type="radio" name="card-type" value="physical" class="peer sr-only" />
              <div class="flex items-center justify-center p-4 bg-white border-2 border-secondary-200 rounded-md peer-checked:border-primary-600 peer-checked:bg-primary-50 transition-all text-center">
                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto mb-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                  </svg>
                  <span class="font-medium text-secondary-800">Physical Card</span>
                  <p class="text-sm text-secondary-600 mt-1">Shipped to your address</p>
                </div>
              </div>
            </label>
          </div>
        </div>

        <div id="shipping-address" class="mb-6 hidden">
          <div class="p-4 bg-secondary-100 rounded-md mb-4">
            <h3 class="font-medium text-secondary-800 mb-2">Shipping Address</h3>
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="address" class="block text-secondary-700 text-sm mb-1">Street Address</label>
                <input 
                  type="text" 
                  id="address" 
                  name="address" 
                  class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                />
              </div>
              <div>
                <label for="city" class="block text-secondary-700 text-sm mb-1">City</label>
                <input 
                  type="text" 
                  id="city" 
                  name="city" 
                  class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                />
              </div>
              <div>
                <label for="province" class="block text-secondary-700 text-sm mb-1">Province</label>
                <select 
                  id="province" 
                  name="province" 
                  class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                >
                  <option value="">Select Province</option>
                  <option value="AB">Alberta</option>
                  <option value="BC">British Columbia</option>
                  <option value="MB">Manitoba</option>
                  <option value="NB">New Brunswick</option>
                  <option value="NL">Newfoundland and Labrador</option>
                  <option value="NS">Nova Scotia</option>
                  <option value="ON">Ontario</option>
                  <option value="PE">Prince Edward Island</option>
                  <option value="QC">Quebec</option>
                  <option value="SK">Saskatchewan</option>
                </select>
              </div>
              <div>
                <label for="postal" class="block text-secondary-700 text-sm mb-1">Postal Code</label>
                <input 
                  type="text" 
                  id="postal" 
                  name="postal" 
                  class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                />
              </div>
            </div>
          </div>
        </div>

        <div class="mb-6">
          <label class="block text-secondary-700 font-medium mb-2">Gift Card Amount</label>
          <AmountSelector name="amount" />
        </div>

        <div class="mb-6">
          <label for="message" class="block text-secondary-700 font-medium mb-2">Gift Message (Optional)</label>
          <textarea 
            id="message" 
            name="message" 
            rows="3"
            class="w-full rounded-md border-secondary-300 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
          ></textarea>
        </div>

        <div class="mt-8">
          <Button type="submit" variant="primary" size="lg" fullWidth={true}>
            Purchase Gift Card
          </Button>
        </div>
      </form>
    </div>
  </section>

  <section class="py-16 bg-secondary-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display text-3xl font-bold text-secondary-800 mb-4">Why Choose Anejo Gift Cards?</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 text-primary-600 rounded-full mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a4 4 0 00-4-4H8.8a4 4 0 00-3.6 2.3L4 7.9a2 2 0 01-1.8 1.1h0a2 2 0 00-2 2V16a2 2 0 002 2h15.8a2 2 0 002-2v-4.5a2 2 0 00-1.6-2L17 9.4a2 2 0 01-1.6-2V6.1a2 2 0 00-2-2.1h-.5a4 4 0 00-3 1.4M16 6V4a2 2 0 00-2-2h0a2 2 0 00-2 2v2" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-secondary-800 mb-2">Perfect Gift</h3>
          <p class="text-secondary-600">Give the gift of amazing food, drinks, and atmosphere. An experience they'll remember.</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 text-primary-600 rounded-full mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-secondary-800 mb-2">Multiple Locations</h3>
          <p class="text-secondary-600">Valid at all Anejo restaurants across Canada, giving your recipient flexibility.</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 text-primary-600 rounded-full mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-secondary-800 mb-2">No Expiration</h3>
          <p class="text-secondary-600">Our gift cards never expire, so recipients can enjoy them whenever they want.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Show/hide shipping address based on card type selection
  const cardTypeInputs = document.querySelectorAll('input[name="card-type"]');
  const shippingAddress = document.getElementById('shipping-address');

  cardTypeInputs.forEach(input => {
    input.addEventListener('change', () => {
      if (input.value === 'physical' && shippingAddress) {
        shippingAddress.classList.remove('hidden');
      } else if (shippingAddress) {
        shippingAddress.classList.add('hidden');
      }
    });
  });
</script>