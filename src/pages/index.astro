---
import Layout from '../layouts/Layout.astro';
import FeatureCard from '../components/FeatureCard.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';

const features = [
  {
    title: "Gift Cards",
    description: "Perfect for birthdays, holidays, or any special occasion. Share the authentic Mexican dining experience.",
    imageSrc: "https://www.anejo.ca/content/dam/cara/en/anejo-image-library/gift-card/Anejo_gift-card-page_check-your-balance.png",
    href: "/gift-cards",
    buttonText: "Purchase Gift Cards",
    buttonVariant: "primary" as "primary" | "secondary" | "outline" | "text" // Added type assertion
  },
  {
    title: "Corporate Gift Cards",
    description: "Reward employees and thank clients with bulk gift cards featuring exclusive bonus offers.",
    imageSrc: "https://www.anejo.ca/content/dam/cara/en/anejo-image-library/gift-card/buy-gift-.png",
    href: "/corporate-gift-cards",
    buttonText: "Corporate Orders",
    buttonVariant: "secondary" as "primary" | "secondary" | "outline" | "text" // Added type assertion
  },
  {
    title: "Gift Card Balance",
    description: "Easily check your gift card balance and view your complete transaction history.",
    imageSrc: "https://dynl.mktgcdn.com/p/jhu3um7hWRGsooM68-3elNWXYjROMaclqcFYRZDc3po/1200x1200.jpg",
    href: "/gift-card-balance",
    buttonText: "Check Balance",
    buttonVariant: "outline" as "primary" | "secondary" | "outline" | "text" // Added type assertion
  }
];
---

<Layout title="Anejo - Authentic Mexican Restaurant & Tequila Bar">
  <Hero 
    title="Experience the authentic flavors of Mexico"
    subtitle="A単ejo is a vibrant Mexican restaurant and tequila bar with locations across Canada."
    imageSrc="https://display.blogto.com/uploads/2020/01/24/1579856058-20200122-Anejo19.jpg"
    height="lg"
  >
    <div class="mt-8 flex flex-wrap gap-4 justify-center">
      <Button href="#gift-cards" variant="primary" size="lg">Explore Gift Cards</Button>
    </div>
  </Hero>

  <section id="gift-cards" class="py-16 bg-secondary-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-secondary-800 mb-4">Gift Card Options</h2>
        <p class="text-secondary-600 text-lg">Share the authentic Mexican dining experience with friends, family, or colleagues.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map(feature => (
          <div class="flex flex-col items-center text-center p-6 bg-white rounded-lg shadow-lg"> {/* Enhanced wrapper */}
            <FeatureCard
              title={feature.title}
              description={feature.description}
              imageSrc={feature.imageSrc}
              href={feature.href}
            />
            <div class="mt-6"> {/* Increased margin for the button */}
              <Button href={feature.href} variant={feature.buttonVariant} size="md">{feature.buttonText}</Button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4 grid md:grid-cols-2 gap-8 items-center">
      <div>
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-4">Authentic Mexican Cuisine</h2>
        <p class="text-lg mb-6">At A単ejo, we serve authentic Mexican cuisine made with the freshest ingredients and traditional recipes. Our chefs create bold flavors that transport you to the heart of Mexico.</p>
        <Button href="#" variant="secondary" size="lg">View Our Menu</Button>
      </div>
      
      <div class="relative">
        <img 
          src="https://dynl.mktgcdn.com/p/AiH4XJgU6ifbYK3lw-ZEHKl0_EvBIJemQCjypOJgNRk/1600x1200.jpg" 
          alt="Authentic Mexican food" 
          class="rounded-lg shadow-xl"
        />
        <div class="absolute -bottom-6 -left-6 bg-accent-500 text-white p-4 rounded-lg shadow-lg hidden md:block">
          <p class="font-display text-xl">Hand-crafted margaritas</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-secondary-800 mb-4">Visit Us Today</h2>
      <p class="text-secondary-600 text-lg max-w-3xl mx-auto mb-8">Experience the bold flavors of Mexico at A単ejo. With multiple locations across Canada, there's always an A単ejo near you.</p>
      
      <div class="flex justify-center">
        <Button href="#" variant="primary" size="lg">Find a Location</Button>
      </div>
    </div>
  </section>
</Layout>