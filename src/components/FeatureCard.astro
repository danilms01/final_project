---
interface Props {
  title: string;
  description: string;
  imageSrc: string;
  href: string;
}

const { title, description, imageSrc, href } = Astro.props;
---

<div class="group bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-all duration-300 flex flex-col h-full">
  <div class="aspect-video overflow-hidden">
    <img 
      src={imageSrc} 
      alt={title} 
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" 
    />
  </div>
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="font-display text-xl md:text-2xl font-semibold text-secondary-800 mb-2">{title}</h3>
    <p class="text-secondary-600 mb-6 flex-grow">{description}</p>
    <div class="text-center">
      <a 
        href={href} 
        class="inline-flex items-center font-medium text-primary-600 hover:text-primary-700 group-hover:translate-x-1 transition-all duration-300"
      >
        Learn More
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="20" 
          height="20" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          class="ml-1"
        >
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</div>